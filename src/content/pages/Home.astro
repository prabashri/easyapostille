        <div class="flex flex-row text-xl bold ta-center border-secondary bg-base-00 col-base-100 br mb-1 p-1 w-fit mi-auto">
            <StarRating rating={agg.ratingValue} showNumber />
            <span class="opacity-75">/ 5 from {agg.reviewCount} reviews</span>
        </div>
        <Anchor
            href={waStartHref}
            type="button"
            variant="primary"
            ariaLabel="Start Apostille Process on WhatsApp"
            title="Share certificates or documents securely on WhatsApp to begin"
            dataId="cta-wa-start"
            className="cta-button mb-2 w-fit mi-auto ta-center"
            dataAction="link_click"
            dataLabel="WhatsApp • Start Apostille"
        >
            <Icon
                slot="icon-left"
                name="whatsapp"
                id="home-cta-1"
                class="block bg-base-00 round fill-base-100 w-1-5 h-1-5"
                aria-hidden="true"
                focusable="false"
            />
