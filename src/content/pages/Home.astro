---
// src/content/pages/Home.astro

import { siteDefaults } from '@/config/siteDefaults';
import ResponsiveImage from '@/components/ResponsiveImage.astro';
import Anchor from '@/components/ui/Anchor.astro';
import FaqList from '@/components/ui/FaqList.astro';
import { Icon } from 'astro-icon/components';
import { buildWhatsAppLink } from '@/utils/whatsapp';
import { getAllReviews, getGlobalAggregate } from "@/utils/reviews";

import StarRating from '@/components/ui/StarRating.astro';

import ReviewList from "@/components/ReviewList.astro";
import ReviewSchema from "@/components/schema/ReviewSchema.astro";

import { inr, price } from '@/config/pricing';

const all = await getAllReviews();
const agg = await getGlobalAggregate();

const waStartHref = buildWhatsAppLink({
  phone: '',
  text: 'Hi EasyApostille! I want to start the apostille process by sharing my certificates/documents.',
  source: 'Hero • Start Apostille',
});

const waQuoteHref = buildWhatsAppLink({
  phone: '',
  text: 'Hi EasyApostille! I need a consultation and price/timeline quote for apostille services.',
  source: 'Hero • Free Quote',
});

// Contact details (with safe fallbacks)
const email = siteDefaults.contact?.email || `contact@${siteDefaults.domainName}`;
const tel1  = siteDefaults.contact?.phone || '';
const tel2  = siteDefaults.contact?.phone2 || '';
const wa1   = (siteDefaults.contact?.whatsapp || '').replace(/[^\d]/g, '');
const wa2   = (siteDefaults.contact?.whatsapp2 || '').replace(/[^\d]/g, '');

// HREFs
const telHref1 = tel1 ? `tel:${tel1.replace(/[^\d+]/g, '')}` : '';

const waHref1  = wa1 ? buildWhatsAppLink({
  phone: '',
  text: 'Hi EasyApostille! I need a consultation and price/timeline quote for apostille services.',
  source: 'home-contact',
}) : '';


const faq = [
  {
    question: "Is a scan enough?",
    answer: "Yes—for many personal documents we can start with scans. We'll confirm if originals are required."
  },
  {
    question: "What is the EasyApostille cost of MEA apostille in India?",
    answer: `EasyApostille offers a transparent SDM bundle for many personal/education cases: ${inr(price('sdmBundle'))} per document (Notary + SDM (Delhi) + MEA + premium return). Multi-document discounts apply; HRD/CoC, if required, are quoted after route confirmation.`,
    speakable: true
  },
  {
    question: "How long does it take?",
    answer: "Typically 2-3 working days for most personal documents; commercial docs may vary."
  },
  {
    question: "Do you cover all Indian states?",
    answer: "Yes, we provide nationwide service across all states and union territories in India."
  },
  {
    question: "Where are you based?",
    answer: "Johnson Complex, Rajaji Nagar, Thanjavur, Tamil Nadu 613004 — India. Open in Maps"
  },
  {
    question: "Is my data safe?",
    answer: "Absolutely. We follow strict privacy controls and secure disposal policies."
  },
  {
    question: "Can you arrange pickup/delivery?",
    answer: "Yes, we can arrange secure pickup and delivery anywhere in India."
  },
  {
    question: "Is the apostille valid abroad?",
    answer: "Yes, apostilles issued by the MEA are recognized in all Hague Convention member countries."
  },
  {
    question: "Which documents can be apostilled?",
    answer: "Common documents for apostille include educational certificates (degrees, diplomas), birth and marriage certificates, power of attorney, affidavits, and commercial documents like invoices and agreements."
  },
  {
    question: "How long does the apostille process take?",
    answer: "The apostille process typically takes 2-3 working days for most personal documents. However, timelines may vary based on document type and issuing state."
  },
  {
    question: "What are the costs involved in getting a document apostilled?",
    answer: "Costs vary depending on the type of document and the number of documents. We offer transparent pricing with no hidden charges and discounts for multiple documents."
  },
  {
    question: "Can I send scanned copies of my documents for apostille?",
    answer: "Yes, we accept both physical and scanned copies of documents. We will guide you through the process based on your preference."
  },
  {
    question: "Is there a way to track the status of my apostille request?",
    answer: "Yes, we provide real-time tracking and proactive updates at each step of the apostille process."
  },
  {
    question: "What if I need an urgent apostille service?",
    answer: "We understand that some situations require urgency. Please contact us directly to discuss expedited options based on your specific needs."
