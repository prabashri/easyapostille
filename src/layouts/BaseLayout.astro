---
// src/layouts/BaseLayout.astro
import BaseHead from '@/components/BaseHead.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
//import Analytics from '@/components/Analytics.astro';
import type { HeadProps } from '@/types/HeadProps';
import Breadcrumb from '@/components/ui/Breadcrumb.astro';
import Analytics from '@/components/Analytics.astro';
import InlineScript from '@/components/InlineScript.astro';

interface Props {
  headProps?: HeadProps;
  hideHeader?: boolean;
  hideFooter?: boolean;
}

const {
  headProps = { title: 'Default Title', showBreadcrumb: false },
  hideHeader = false,
  hideFooter = false,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <slot name="headContent-top" />
    {/* -- SEO / Meta -- */}
    <BaseHead {...headProps} />
    {/* -- Optional extra tags (OG, JSON-LD, fonts, etc.) -- */}
    <slot name="headContent-bottom" />
  </head>
  <body>
    {/* -- Accessibility -- */}
    <a href="#main-content" class="skip-link">Skip to main content</a>

    {!hideHeader && <Header />}

    <main id="main-content">
      {/*-- src/layouts/BaseLayout.astro --*/}
      



      <slot />
    </main>
      
    {/** ðŸ”¹ Analytics */}
    <Analytics />
    
    {/* -- inline scripts -- */}
    <InlineScript />

    {/* -- Optional extra content -- */}

    {!hideFooter && <Footer />}

    {/* -- Page-specific scripts -- */}
    <slot name="extraScripts" />
  </body>
</html>
